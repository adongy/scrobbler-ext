{
    "manifest_version": 2,
    "name": "Music Scrobbler",
    "version": "0.0.1",
    "background": {
        "persistent": false,
        "scripts": ["background.js"]
    },
    "permissions": [
        "nativeMessaging",
        "tabs",
        "http://*/*",
        "https://*/*"
    ],
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "Monitor songs"
    }
}
